<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_single_message_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_message_user_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_image"

        />

    <TextView
        android:id="@+id/message_display_username"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/chat_message_user_image"
        android:text="Username"
        android:textStyle="bold" />


    <TextView
        android:textSize="13sp"
        android:id="@+id/message_recieve_or_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_display_username"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/chat_message_user_image"
        android:text="userMessage"
         />

    <TextView
        android:id="@+id/time"
       android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"

        android:layout_toRightOf="@+id/message_display_username" />


</RelativeLayout>